<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnAddEmployee"
        android:onClick="onBtnClickedAddEmployee"
        android:layout_width="277dp"
        android:layout_height="66dp"
        android:layout_marginTop="128dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Add Employees"
        app:backgroundTint="#48AE34"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddShifts"
        android:onClick="onBtnClickedAddShifts"
        android:layout_width="277dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Add Shifts"
        app:backgroundTint="#48AE34"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddEmployee" />

    <Button
        android:id="@+id/btnAddCondititions"
        android:layout_width="277dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Add Conditions"
        app:backgroundTint="#48AE34"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddShifts" />

    <Button
        android:id="@+id/btnGenerateSchedule"
        android:layout_width="277dp"
        android:layout_height="66dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Generate Schedule"
        app:backgroundTint="#48AE34"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCondititions" />
</androidx.constraintlayout.widget.ConstraintLayout>